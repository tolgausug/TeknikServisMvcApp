@model ArizaViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_EmptyLayout.cshtml";
}

<div>

    <div ng-app="admin" ng-controller="ArizalarimCtrl" ng-cloak>
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-sm-12">
                <h2>Faults</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index","Ana",new{Area="Yonetim"})">Faults </a>
                    </li>
                    <li class="active">
                        <strong>Faults</strong>
                    </li>
                </ol>
                <div class="row">
                    <div class="col-md-12">
                        <md-progress-circular ng-show="yukleniyor" class="md-warn md-hue-3" md-diameter="96"></md-progress-circular>


                        <div class="row" ng-submit="init()" ng-show="!yukleniyor">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Konum</th>
                                        <th>Açıklama</th>
                                        <th>{{2+2}}</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="(key,item) in arizalar">
                                        <th scope="row">{{key+1}}</th>
                                        <td>{{item.Konum}}</td>
                                        <td>{{item.Aciklama}}</td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>



                    </div>
                </div>

                @*<h2 class="col-sm-6">Pending Operations </h2> <h2 class="col-sm-6">Finished Operations </h2>
                    <textarea class="col-sm-6" ng-repeat="init()" rows="20"></textarea>


                    <textarea class="col-sm-6" ng-show="yukleniyor" ng-model="init()" rows="20"> </textarea>
                    <button id="Islemler" class="btn-success">Finish the Operation</button>*@



            </div>
        </div>

    </div>
</div>

